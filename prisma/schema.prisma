// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(50)
  last_name    String   @db.VarChar(100)
  email        String   @db.VarChar(200)
  password     String
  registration String   @db.VarChar(10)
  created_at   DateTime @default(now())
  deleted      Boolean  @default(false)
  role         Int      @default(1)

  @@map("students")
}

model Teacher {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(50)
  last_name    String   @db.VarChar(100)
  email        String   @db.VarChar(200)
  password     String
  registration String   @db.VarChar(10)
  created_at   DateTime @default(now())
  deleted      Boolean  @default(false)
  role         Int      @default(2)

  @@map("teachers")
}

model Subject {
  id         String   @id @default(uuid())
  name       String   @db.VarChar(50)
  code       String
  created_at DateTime @default(now())
  deleted    Boolean  @default(false)

  @@map("subjects")
}

model Coordenation {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(50)
  last_name    String   @db.VarChar(100)
  email        String   @db.VarChar(200)
  phone        String   @db.VarChar(9)
  ddd          String   @db.VarChar(2)
  password     String
  created_at   DateTime @default(now())
  deleted      Boolean  @default(false)
  role         Int      @default(2)

  @@map("coordenation")
}
